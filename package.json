{
  "name": "credit-card-payment-planner",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev:web": "pnpm --filter @ccpp/web dev",
    "build:web": "pnpm --filter @ccpp/web build",
    "lint:web": "pnpm --filter @ccpp/web lint",
    "typecheck:web": "pnpm --filter @ccpp/web typecheck",
    "test:web": "pnpm --filter @ccpp/web test",
    "lint": "pnpm -r --if-present lint",
    "typecheck": "pnpm -r --if-present typecheck",
    "build": "pnpm -r --if-present build",
    "test:all": "pnpm -r --if-present test",
    "test:coverage": "pnpm -r --if-present test:coverage",
    "test": "pnpm test:all"
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "@swc/core",
      "esbuild"
    ],
    "peerDependencyRules": {
      "allowedVersions": {
        "react": "19.2.0"
      }
    }
  }
}
